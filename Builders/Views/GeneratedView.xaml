<Window x:Class="Builders.Views.GeneratedView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Builders.Views"
        mc:Ignorable="d"
        Title="{Binding WindowName}" 
        MinHeight="650" 
        MinWidth="1000"
        Height="650"
        Width="1000"
        WindowState="Maximized"
        Style="{StaticResource WindowStyle}">
    <Grid>
        <TabControl Grid.Row="1" 
                    TabStripPlacement="Left" 
                    ItemContainerStyle="{StaticResource TabItemStyle1}">
            <!-- "Materials Details" -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="15" 
                                   Text="Materials Details"                                   
                                   FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Border Style="{StaticResource BorderRadiusBlack}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" 
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="5">
                                <Label Content="Grade Level"/>
                                <ComboBox Width="100" 
                                          Margin="5"
                                          ItemsSource="{Binding LevelDetails }" 
                                          SelectedItem="{Binding LevelDetailSelect, Mode=TwoWay}"
                                          DisplayMemberPath="Name"/>
                                <Label Content="Partition"/>
                                <ComboBox Width="100" 
                                          Margin="5"
                                          ItemsSource="{Binding PartitionDetails }" 
                                          SelectedItem="{Binding PartitionDetailSelect, Mode=TwoWay}"
                                          DisplayMemberPath="Name"/>
                                <Label Content="Additional"/>
                                <ComboBox Width="100" 
                                          Margin="5"
                                          ItemsSource="{Binding AdditionalDetails }" 
                                          SelectedItem="{Binding AdditionalDetailSelect, Mode=TwoWay}"
                                          DisplayMemberPath="Name"/>
                            </StackPanel>

                            <GroupBox Grid.Row="1" 
                                      Grid.Column="0" 
                                      Header="Transitions" 
                                      BorderThickness="2" 
                                      BorderBrush="Blue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" 
                                           Grid.Row="0" 
                                           Content="R" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="0"
                                             Margin="5"
                                             Width="50"
                                             Text="{Binding TransitionRDetail}"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="1" 
                                           Content="T"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="1"
                                             Margin="5"
                                             Width="50"
                                             Text="{Binding TransitionTDetail}"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="2" 
                                           Content="Others"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="2"
                                             Margin="5"
                                             Width="50"
                                             Text="{Binding TransitionOtherDetail}"/>
                                    <TextBox Grid.Column="2" 
                                             Grid.Row="2"
                                             Margin="5"
                                             Text="{Binding TransitionOtherNameDetail}"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="2" 
                                      Grid.Column="0" 
                                      Header="Trim" 
                                      BorderThickness="2" 
                                      BorderBrush="Blue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" 
                                           Grid.Row="0" 
                                           Content="Type Trim" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="0"
                                              Margin="5"
                                              ItemsSource="{Binding TrimDetails }" 
                                              SelectedItem="{Binding TrimDetailSelect, Mode=TwoWay}"
                                              DisplayMemberPath="Name"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="1" 
                                           Content="Qty. Trim"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="1"
                                             Margin="5"
                                             Width="50"
                                             HorizontalAlignment="Left"
                                             Text="{Binding TrimQtyDetail}"/>
                                </Grid>                                
                            </GroupBox>

                            <GroupBox Grid.Row="1" 
                                      Grid.RowSpan="2"  
                                      Grid.Column="1" 
                                      Header="Material Type" 
                                      BorderThickness="2" 
                                      BorderBrush="Blue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" 
                                           Grid.Row="0" 
                                           Content="Existing" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="0"
                                              Margin="5"
                                              ItemsSource="{Binding ExistingDetails }" 
                                              SelectedItem="{Binding ExistingDetailSelect, Mode=TwoWay}"
                                              DisplayMemberPath="Name"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="1"                                           
                                           Content="Demolition" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="1"
                                              Margin="5"
                                              ItemsSource="{Binding DemolitionDetails }" 
                                              SelectedItem="{Binding DemolitionDetailSelect, Mode=TwoWay}"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="2" 
                                           Content="New" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="2"
                                              Margin="5"
                                              ItemsSource="{Binding NewFloorDetails }" 
                                              SelectedItem="{Binding NewFloorDetailSelect, Mode=TwoWay}"
                                              DisplayMemberPath="Name"/>
                                    <Label Grid.ColumnSpan="2"
                                           Grid.Row="3"
                                           Content="Measurements"
                                           HorizontalContentAlignment="Center"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="4" 
                                           Content="Lenght (ft)"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="4"
                                             Margin="5"
                                             Text="{Binding LenghtDetail}"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="5" 
                                           Content="Width (ft)"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="5"
                                             Margin="5"
                                             Text="{Binding WidthDetail}"/>
                                </Grid>                             
                            </GroupBox>

                            <Button Grid.Row="3" 
                                    Grid.Column="1"
                                    Style="{StaticResource FooterButton}"
                                    HorizontalAlignment="Right"
                                    Content="Clear Data"
                                    Foreground="Red"
                                    BorderBrush="Red"/>

                            <DataGrid Grid.Row="4"
                                      Grid.ColumnSpan="2"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True" 
                                      ItemsSource="{Binding GeneratedMaterials, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedItem="{Binding GeneratedMaterialSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">                                
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Level" Binding="{Binding Path=GradeLevel}"/>
                                    <DataGridTextColumn Header="Partition" Binding="{Binding Path=Partition}" />
                                    <DataGridTextColumn Header="Additional" Binding="{Binding Path=Aditional}"/>
                                    <DataGridTextColumn Header="Existing" Width="*" Binding="{Binding Path=ExistingFloor}"/>
                                    <DataGridTextColumn Header="New" Width="*" Binding="{Binding Path=NewFloor}"/>
                                    <DataGridTextColumn Header="L(ft)" Width="auto" Binding="{Binding Path=LenghtFloor}"/>
                                    <DataGridTextColumn Header="W(ft)" Width="auto" Binding="{Binding Path=WidthFloor}"/>
                                    <DataGridTextColumn Header="R" Width="auto" Binding="{Binding Path=TransitionR}"/>
                                    <DataGridTextColumn Header="T" Width="auto" Binding="{Binding Path=TransitionT}"/>
                                    <DataGridTextColumn Header="Trim" Width="*" Binding="{Binding Path=TypeTrim}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="5"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal" 
                                        Style="{StaticResource FooterMenu}">
                                <Button Content="Add"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Green"
                                        BorderBrush="Green"/>
                                <Button Content="Edit"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Brown"
                                        BorderBrush="Brown"/>
                                <Button Content="Del"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Red"
                                        BorderBrush="Red"/>
                            </StackPanel>
                        </Grid>
                        
                    </Border>
                </TabItem.Content>
            </TabItem>

            <!-- "Materials Accesories" -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="15" 
                                   Text="Materials Accesories" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Border Style="{StaticResource BorderRadiusBlack}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" 
                                   Grid.Row="0"
                                   Margin="5"
                                   HorizontalContentAlignment="Center"
                                   Content="Total Material"/>
                            <Label Grid.Column="1" 
                                   Grid.Row="0"
                                   Margin="5"
                                   HorizontalContentAlignment="Center"
                                   Content="Accessories"/>
                            <Label Grid.Column="2" 
                                   Grid.Row="0"
                                   Margin="5"
                                   HorizontalContentAlignment="Center"
                                   Content="Type Accessories"/>
                            <TextBlock Grid.Column="0"
                                       Grid.Row="1"
                                       Margin="5"
                                       Text="{Binding TotalMaterialAccessorie}"/>
                            <ComboBox Grid.Column="1"
                                      Grid.Row="1"
                                      Margin="5"
                                      ItemsSource="{Binding FloorNameAccessories }" 
                                      SelectedItem="{Binding FloorNameAccessorieSelect, Mode=TwoWay}"
                                      DisplayMemberPath="Name"/>
                            <ComboBox Grid.Column="2"
                                      Grid.Row="1"
                                      Margin="5"
                                      ItemsSource="{Binding FloorTypeAccessories }" 
                                      SelectedItem="{Binding FloorTypeAccessorieSelect, Mode=TwoWay}"
                                      DisplayMemberPath="Name"/>
                            
                            <DataGrid Grid.Row="2"
                                      Grid.ColumnSpan="3"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True" 
                                      ItemsSource="{Binding GeneratedAccessories, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedItem="{Binding GeneratedAccessorieSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="New Floor" Width="*" Binding="{Binding Path=NewFloor}"/>
                                    <DataGridTextColumn Header="Total Floor" Binding="{Binding Path=TotalFloor}"/>
                                    <DataGridTextColumn Header="Accessories" Width="*" Binding="{Binding Path=AccessoriesFloor}" />
                                    <DataGridTextColumn Header="Type" Width="*" Binding="{Binding Path=TypeAccessoriesFloor}"/>
                                    <DataGridTextColumn Header="Total Acc Floor" Width="*" Binding="{Binding Path=TotalAccessoriesFloor}"/>                                    
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="3" 
                                        Grid.ColumnSpan="3"
                                        Orientation="Horizontal"
                                        Style="{StaticResource FooterMenu}">
                                <Button Content="Edit"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Brown"
                                        BorderBrush="Brown"/>
                            </StackPanel>

                        </Grid>
                    </Border>
                </TabItem.Content>
            </TabItem>

            <!-- "Stairs and Leveling" -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="15" 
                                   Text="Stairs and Leveling" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Border Style="{StaticResource BorderRadiusBlack}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.ColumnSpan="2" 
                                        Grid.Row="0"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Label Content="Grade Level" 
                                       Margin="5"/>
                                <ComboBox Width="150" 
                                          Margin="5"
                                          ItemsSource="{Binding LevelStairs }" 
                                          SelectedItem="{Binding LevelStairSelect, Mode=TwoWay}"
                                          DisplayMemberPath="Name"/>
                            </StackPanel>

                            <GroupBox Grid.Row="1" 
                                      Grid.Column="0" 
                                      Header="Stairs" 
                                      BorderThickness="2" 
                                      BorderBrush="Blue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" 
                                           Grid.Row="0" 
                                           Content="Type Stair" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="0"
                                              Margin="5"
                                              ItemsSource="{Binding TypeStairs }" 
                                              SelectedItem="{Binding TypeStairSelect, Mode=TwoWay}"
                                              DisplayMemberPath="Name"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="1" 
                                           Content="Qty. Stairs" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="1"
                                             Margin="5"                                             
                                             Text="{Binding QtyStairs}"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="2" 
                                           Content="Lenght (ft)" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="2"
                                             Margin="5"                                             
                                             Text="{Binding LenghtStairs}"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="3" 
                                           Content="Demolition" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="3"
                                              Margin="5"
                                              ItemsSource="{Binding DemolitionStairs }" 
                                              SelectedItem="{Binding DemolitionStairSelect, Mode=TwoWay}"/>
                                </Grid>
                                
                            </GroupBox>

                            <GroupBox Grid.Row="1" 
                                      Grid.Column="1" 
                                      Header="Leveling" 
                                      BorderThickness="2" 
                                      BorderBrush="Blue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>                                       
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" 
                                           Grid.Row="0" 
                                           Content="Type Leveling" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <ComboBox Grid.Column="1" 
                                              Grid.Row="0"
                                              Margin="5"
                                              ItemsSource="{Binding TypeLevelingStairs }" 
                                              SelectedItem="{Binding TypeLevelingStairSelect, Mode=TwoWay}"
                                              DisplayMemberPath="Name"/>
                                    <Label Grid.Column="0" 
                                           Grid.Row="1" 
                                           Content="Qty. Leveling" 
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Grid.Row="1"
                                             Margin="5"                                             
                                             Text="{Binding QtyLevelingStairs}"/>                                    
                                </Grid>
                            </GroupBox>

                            <Button Grid.Row="2" 
                                    Grid.Column="1"
                                    Style="{StaticResource FooterButton}"
                                    HorizontalAlignment="Right"
                                    Content="Clear Data"
                                    Foreground="Red"
                                    BorderBrush="Red"/>

                            <DataGrid Grid.Row="3"
                                      Grid.ColumnSpan="2"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True" 
                                      ItemsSource="{Binding GeneratedStairs, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedItem="{Binding GeneratedStairSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Level" Width="*" Binding="{Binding Path=GradeLevel}"/>
                                    <DataGridTextColumn Header="Type Stair" Width="*" Binding="{Binding Path=TypeStairs}" />
                                    <DataGridTextColumn Header="Demolition" Width="*" Binding="{Binding Path=Demolition}" />
                                    <DataGridTextColumn Header="QTY" Binding="{Binding Path=QtyStairs}"/>
                                    <DataGridTextColumn Header="L(ft)" Binding="{Binding Path=LenghtStairs}"/>
                                    <DataGridTextColumn Header="QTY-L" Binding="{Binding Path=QtyStairsLenght}"/>
                                    <DataGridTextColumn Header="Type Leveling" Width="*" Binding="{Binding Path=TypeLeveling}"/>
                                    <DataGridTextColumn Header="QTY" Binding="{Binding Path=QtyLeveling}"/>                                    
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="4"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal" 
                                        Style="{StaticResource FooterMenu}">
                                <Button Content="Add"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Green"
                                        BorderBrush="Green"/>
                                <Button Content="Edit"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Brown"
                                        BorderBrush="Brown"/>
                                <Button Content="Del"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Red"
                                        BorderBrush="Red"/>
                            </StackPanel>

                        </Grid>
                    </Border>
                </TabItem.Content>
            </TabItem>

            <!-- "Molding" -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="15" 
                                   Text="Molding" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Border Style="{StaticResource BorderRadiusBlack}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" 
                                   Grid.Row="0"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Accesory"/>
                            <ComboBox Grid.Column="1" 
                                      Grid.Row="0" 
                                      Width="100" 
                                      Margin="5"
                                      HorizontalAlignment="Left"/>
                            
                            <Label Grid.Column="0" 
                                   Grid.Row="1"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Type Accesory"/>
                            <ComboBox Grid.Column="1" 
                                      Grid.Row="1" 
                                      Width="100" 
                                      Margin="5"
                                      HorizontalAlignment="Left"/>
                            
                            <Label Grid.Column="0" 
                                   Grid.Row="2"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="QTY Accesory"/>
                            <TextBox Grid.Column="1" 
                                      Grid.Row="2" 
                                      Width="100" 
                                      Margin="5"
                                      HorizontalAlignment="Left"/>
                            
                            <Label Grid.Column="0" 
                                   Grid.Row="3"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Height (ft)"/>
                            <TextBox Grid.Column="1" 
                                      Grid.Row="3" 
                                      Width="100" 
                                      Margin="5"
                                      HorizontalAlignment="Left"/>
                            
                            <Label Grid.Column="0" 
                                   Grid.Row="4"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Painting"/>
                            <ComboBox Grid.Column="1" 
                                      Grid.Row="4" 
                                      Width="100" 
                                      Margin="5"
                                      HorizontalAlignment="Left"/>

                            <Button Grid.Row="5" 
                                    Grid.Column="1"
                                    Style="{StaticResource FooterButton}"
                                    HorizontalAlignment="Right"
                                    Content="Clear Data"
                                    Foreground="Red"
                                    BorderBrush="Red"/>

                            <DataGrid Grid.Row="6"
                                      Grid.ColumnSpan="2"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True" 
                                      ItemsSource="{Binding W, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedItem="{Binding Select, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Molding" Width="*" Binding="{Binding Path=L}"/>
                                    <DataGridTextColumn Header="Type Molding" Width="*" Binding="{Binding Path=P}" />
                                    <DataGridTextColumn Header="QTY" Binding="{Binding Path=A}"/>
                                    <DataGridTextColumn Header="H(ft)" Binding="{Binding Path=E}"/>
                                    <DataGridTextColumn Header="Baseboard" Binding="{Binding Path=N}"/>
                                    <DataGridTextColumn Header="Painting" Width="*" Binding="{Binding Path=L}"/>                                    
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="7"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal" 
                                        Style="{StaticResource FooterMenu}">
                                <Button Content="Add"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Green"
                                        BorderBrush="Green"/>
                                <Button Content="Edit"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Brown"
                                        BorderBrush="Brown"/>
                                <Button Content="Del"
                                        Style="{StaticResource FooterButton}"
                                        Foreground="Red"
                                        BorderBrush="Red"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem.Content>
            </TabItem>

            <!-- "Suplementary" -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="15" 
                                   Text="Suplementary" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Border Style="{StaticResource BorderRadiusBlack}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Furniture Handeling / Room"/>
                            <TextBox Grid.Column="1"
                                     Grid.Row="0" 
                                     Width="100" 
                                     HorizontalAlignment="Left"
                                     Margin="5"/>

                            <Label Grid.Column="0"
                                   Grid.Row="1"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Rate Disposal"/>
                            <TextBox Grid.Column="1"
                                     Grid.Row="1" 
                                     Width="100" 
                                     HorizontalAlignment="Left"
                                     Margin="5"/>

                            <Label Grid.Column="0"
                                   Grid.Row="2"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="Flooring Delivery"/>
                            <ComboBox Grid.Column="1"
                                      Grid.Row="2" 
                                      Width="100" 
                                      HorizontalAlignment="Left"
                                      Margin="5"/>

                            <Label Grid.Column="0"
                                   Grid.Row="3"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   Content="QTY Delivery"/>
                            <TextBox Grid.Column="1"
                                      Grid.Row="3" 
                                      Width="100" 
                                      HorizontalAlignment="Left"
                                      Margin="5"/>

                            <Label Grid.Column="0"
                                   Grid.Row="4"
                                   Margin="5"
                                   HorizontalContentAlignment="Right"
                                   VerticalContentAlignment="Center"
                                   Content="General Notes"/>
                            <TextBox Grid.Column="1"
                                     Grid.Row="4"                             
                                     Margin="5"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="100"/>

                            <DataGrid Grid.Row="5"
                                      Grid.ColumnSpan="2"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True" 
                                      ItemsSource="{Binding W, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedItem="{Binding Select, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <DataGrid.Columns>
