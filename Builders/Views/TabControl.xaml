                                Margin="100,0,0,0" 
                                Foreground="Green"
                                BorderBrush="Green"
                                Style="{StaticResource FooterButton}" 
                                Command="{Binding PrintWorkOrder}"
                                IsEnabled="{Binding EnableWorkOrder}"/>
                    </StackPanel>
                </Grid>
            </TabItem.Content>
        </TabItem>
