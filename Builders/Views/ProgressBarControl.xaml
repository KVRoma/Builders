<UserControl x:Class="Builders.Views.ProgressBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Builders.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="500">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Please wait..." 
                   Style="{StaticResource LabelSearchHeader}"/>
            <ProgressBar  Height="5"
                          Width="500"
                          IsIndeterminate="True" Foreground="Blue" />
        </StackPanel>
    </Grid>
</UserControl>
