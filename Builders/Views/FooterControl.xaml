<UserControl x:Class="Builders.Views.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Builders.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
        <Button Margin="5" Width="50" Height="20" Content="Add" Foreground="Green" FontWeight="Bold"/>
        <Button Margin="5" Width="50" Height="20" Content="Edit" Foreground="Brown" FontWeight="Bold"/>
        <Button Margin="5" Width="50" Height="20" Content="Del" Foreground="Red" FontWeight="Bold"/>
    </StackPanel>
</UserControl>
